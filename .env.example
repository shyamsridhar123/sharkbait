# Azure OpenAI Configuration (required)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_API_KEY=your-api-key
AZURE_OPENAI_DEPLOYMENT=gpt-codex-5.2
AZURE_OPENAI_API_VERSION=2024-10-21

# Logging Configuration
SHARKBAIT_LOG_LEVEL=info              # debug, info, warn, error
SHARKBAIT_LOG_FILE=false              # Enable file logging to ~/.sharkbait/logs
SHARKBAIT_LOG_JSON=false              # Use JSON format for console output
# SHARKBAIT_LOG_DIR=~/.sharkbait/logs # Custom log directory

# Telemetry (opt-in anonymous analytics)
SHARKBAIT_TELEMETRY=false

# Context & Safety
SHARKBAIT_MAX_CONTEXT_TOKENS=100000
SHARKBAIT_CONFIRM_DESTRUCTIVE=true

# Working Directory (optional - defaults to current directory)
# SHARKBAIT_WORKING_DIR=/path/to/default/project

# Config is stored in: ~/.sharkbait/config.json
