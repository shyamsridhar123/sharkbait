{
  "name": "sharkbait",
  "version": "1.0.0",
  "description": "AI-powered coding assistant for the command line. Uses OpenAI Responses API (not Chat). Autonomous agents, parallel code reviews, 33+ tools.",
  "type": "module",
  "bin": {
    "sharkbait": "./dist/cli.js"
  },
  "scripts": {
    "dev": "bun run src/cli.ts",
    "build": "bun build src/cli.ts --outdir dist --target bun",
    "build:binary": "bun build src/cli.ts --compile --outfile sharkbait",
    "build:all": "bun run scripts/build-all.ts",
    "test": "bun test",
    "test:e2e": "bun run tests/e2e/real-e2e-tests.ts",
    "test:ux": "bun run tests/e2e/comprehensive-ux-tests.ts",
    "test:llm": "bun run scripts/test-llm-connection.ts",
    "test:agent": "bun run scripts/test-agent-loop.ts",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "cli-highlight": "^2.1.11",
    "commander": "^12.1.0",
    "ink": "^4.4.1",
    "ink-link": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "openai": "^4.77.0",
    "react": "^18.2.0",
    "react-devtools-core": "^7.0.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "^18.2.0",
    "typescript": "^5.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "author": "Shyam Sridhar",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/shyamsridhar123/sharkbait.git"
  },
  "keywords": [
    "ai",
    "coding-assistant",
    "cli",
    "llm",
    "azure-openai"
  ]
}
